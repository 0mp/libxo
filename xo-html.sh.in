#!/bin/sh

BASE=@LIBXO_SHAREDIR@

case "$1" in
    -f|--file)
        shift;
        FILE="$1";
	exec > "$FILE";
	;;
esac

echo "<html>\n<head>\n"
echo '<meta http-equiv="content-type" content="text/html; charset=utf-8"/>'
echo '<link rel="stylesheet" href="'$BASE'/wrapper.css">'
echo '<link rel="stylesheet" href="'$BASE'/jquery.qtip.css"/>'
echo '<script type="text/javascript" src="'$BASE'/jquery.js"></script>'
echo '<script type="text/javascript" src="'$BASE'/jquery.qtip.js"></script>'
echo '<script type="text/javascript" src="'$BASE'/wrapper.js"></script>'
echo '<script>'
echo '</script>'
echo "</head>\n<body>\n"

cat

echo "</body>\n</html>\n"

exit 0